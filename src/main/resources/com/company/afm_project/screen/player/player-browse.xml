<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://playerBrowse.caption"
        focusComponent="playersTable">
    <data readOnly="true">
        <collection id="playersDc"
                    class="com.company.afm_project.entity.Player">
            <fetchPlan extends="_base">
            </fetchPlan>
            <loader id="playersDl">
                <query>
                    <![CDATA[select e from Player e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="playersTable" spacing="true">
        <filter id="filter"
                dataLoader="playersDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="playersTable"
                    width="100%"
                    dataContainer="playersDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="position"/>
                <column id="age"/>
                <column id="weight"/>
                <column id="hight"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="playersTable.create"/>
                <button id="editBtn" action="playersTable.edit"/>
                <button id="removeBtn" action="playersTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
